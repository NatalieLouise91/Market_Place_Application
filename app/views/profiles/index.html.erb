<p id="notice"><%= notice %></p>

<div class="jumbotron jumbotron-fluid" style = "background-color: #e0e0e0;" >
  <h1>Profiles</h1>
</div>

  <table class = "table">
    <thead>
      <tr>
        <th>Institution name</th>
        <th>Description</th>
        <th>Lending policy</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.institution_name %></td>
          <td><%= profile.description %></td>
          <td><%= profile.lending_policy %></td>
          <td><%= profile.user_id %></td>
          <% if current_user == profile.user %>
            <td><button class= "btn btn-primary btn-sm", style= "background-color: #00838f;"><%= link_to 'Show', profile %></button></td>
            <td><button class= "btn btn-primary btn-sm", style= "background-color: #00838f;"><%= link_to 'Edit', edit_profile_path(profile) %></button></td>
            <td><button class= "btn btn-primary btn-sm", style= "background-color: #00838f;"><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
          <% else %>
            <td><button class= "btn btn-primary btn-sm", style= "background-color: #00838f;"><%= link_to 'Show', profile %></button></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>
<% if current_user.profile == nil %>
<button class= "btn btn-primary btn-sm", style= "background-color: #00838f;"><%= link_to 'New Profile', new_profile_path %></button>
<% end %>
